{
    "compilerOptions": {
        "target": "ES2022",
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "outDir": "./lib",
        "baseUrl": ".",
        "rootDir": "./src",
        "strict": true,
        "isolatedModules": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "@errors": [
                "./src/errors/index.ts"
            ],
            "@utilities": [
                "./src/utilities/index.ts"
            ],
            "@errors/*": [
                "./src/errors/*"
            ],
            "@utilities/*": [
                "./src/utilities/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}