{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./lib",
        "baseUrl": ".",
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "errors": ["src/errors"],
            "utilities": ["src/utilities"],
        }
    },
    "exclude": [
        "node_modules"
    ]
}