{
    "compilerOptions": {
        "target": "ES2022",
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "outDir": "./lib",
        "baseUrl": ".",
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "errors": [
                "src/errors"
            ],
            "utilities": [
                "src/utilities"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}